<h1>Listing wikis</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date Created</th>
      <th>Last Updated</th>
      <th colspan="<%= @colspan %>"></th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= link_to wiki.name, wiki %></td>
        <td><%= wiki.created_at %></td>
        <td><%= wiki.updated_at %></td>
        <% if @user.premium? %>
          <td><%= link_to 'View Collaborators', wiki_collaborators_path(wiki) %></td>
          <td><%= link_to 'Add Collaborator', new_wiki_collaborator_path(wiki) %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
        <td><%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

