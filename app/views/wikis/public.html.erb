<h1>All Public Wikis</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created By</th>
      <th>Date Created</th>
      <th>Last Updated</th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= link_to wiki.name, wiki_path(wiki) %></td>
        <td><%= wiki.user.name %></td>
        <td><%= wiki.created_at %></td>
        <td><%= wiki.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wiki', new_wiki_path %>
